<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/normal_size"
            android:layout_marginTop="@dimen/normal_size"
            android:text="@string/menu_settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/large_size" />

        <TextView
            android:id="@+id/sound_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_size"
            android:layout_marginLeft="@dimen/small_size"
            android:text="@string/sound_music"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/normal_size" />

        <SeekBar
            android:id="@+id/sound_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_size"
            android:layout_marginRight="@dimen/normal_size"
            android:max="5" />

        <CheckBox
            android:id="@+id/sound_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/normal_size"
            android:checked="true"
            android:text="@string/sound"
            android:textSize="@dimen/normal_size" />

        <CheckBox
            android:id="@+id/music_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_size"
            android:checked="true"
            android:text="@string/music"
            android:textSize="@dimen/medium_size" />

<TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_size"
        android:layout_marginLeft="@dimen/small_size"
        android:text="@string/difficulty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/normal_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RatingBar
                    android:id="@+id/difficulty_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_size"
                    android:numStars="3" />

                <TextView
                    android:id="@+id/difficulty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/normal_size"
                    android:text="@string/difficulty_easy"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColorHint="@android:color/primary_text_light"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

</LinearLayout>