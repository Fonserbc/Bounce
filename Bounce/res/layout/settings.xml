<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/normal_size"
            android:layout_marginTop="@dimen/normal_size"
            android:text="@string/menu_settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/large_size" />

        <SeekBar
            android:id="@+id/sound_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_size"
            android:layout_marginRight="@dimen/normal_size" />

        <CheckBox
            android:id="@+id/sound_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="@string/sound"
            android:textSize="@dimen/normal_size" />

    </LinearLayout>

</RelativeLayout>